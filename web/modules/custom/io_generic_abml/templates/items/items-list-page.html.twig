<div class="container-fluid p-0">
  {{ search_form }}
  {% if results %}
  <h1>Listado de Ã­tems encontrados</h1>
  <div class="container-fluid">
    <p>Mostrando registros {{ results_counter.start }} - {{ results_counter.end }} de  {{ results_counter.total }} </p>
	  <p> {{ pager }} </p>
    <div class="row" style="margin: 0 auto; display: flex;
		    flex-wrap: wrap; justify-content: space-between;">
      {% for item in results %}
      <div class="card" style="width: 18rem; text-align: center;">
        <img class="card-img-top" src="{{ item.picture['data']['#attributes']['src'] }}" alt="Card image cap" style="text-align: center; width: 150px; height: 150px; object-fit: cover; margin: 0 auto;">
        <div class="card-body">
          <h5 class="card-title">{{ item.title }}</h5>
          {% if item.editorial %}<p>Editorial: {{ item.editorial }}</p>{% endif %}
          <p class="badge badge-pill badge-success">{{ item.itemType }}</p>
          {# <p class="badge badge-pill badge-success">{{ item.articleFormat }}</p> #}
          {#{ kint(item) }#}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  {% else %}
  <div class="container-fluid p-0 mt-1">
    <div class="m-0 auto">
    {% if results_counter == -1 %}
      <h2>Ingrese algun filtro y presione BUSCAR</h2>
    {% else %}
      <h2>No se han encontrado resultados para los filtros ingresados</h2>
    {% endif %}
    </div>
  </div>
  {% endif %}
</div>
